<!--
  Used by maven-assembly-plugin to pack the project code as a zip file.
-->
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>ui</id> <!-- Must match the classifier specified for the dependency to aggregator-ionic in aggregator-frontend/pom.xml file -->
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/www</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
              <!-- index.html file is to be renamed. See comment below for the files/file section -->
              <exclude>index.html</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
      <!--
        NOTE: Rename index.html file to index_ionic.html file to allow the old UI and new Ionic UI to coexist in the same web app.
      -->
      <file>
        <source>${project.basedir}/www/index.html</source>
        <outputDirectory>/</outputDirectory>
        <destName>ionic.html</destName>
      </file>
    </files>
</assembly>
