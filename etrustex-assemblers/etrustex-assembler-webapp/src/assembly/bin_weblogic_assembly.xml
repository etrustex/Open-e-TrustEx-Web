<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>src</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../../etrustex-ant/wlstapi-dist</directory>
            <outputDirectory>wlstapi-dist</outputDirectory>
            <includes>
                <include>**/*.cmd</include>
                <include>**/*.sh</include>
                <include>**/*.txt</include>
                <include>**/*.html</include>
                <include>**/*.css</include>
                <include>**/*.properties</include>
                <include>**/*.jar</include>
                <include>**/*.py</include>
                <include>**/README</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../../etrustex-ant/scripts/oracle/web</directory>
            <outputDirectory>sql</outputDirectory>
            <includes>
                <include>**/*.sql</include>
            </includes>
            <excludes>
                <exclude>**/environment/**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../../etrustex-ant/scripts/mysql/web</directory>
            <outputDirectory>sql</outputDirectory>
            <includes>
                <include>**/*.sql</include>
            </includes>
            <excludes>
                <exclude>**/environment/**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.ear</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>